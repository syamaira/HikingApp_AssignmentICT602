<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_signup"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/hiking"
            android:contentDescription="App Logo"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join the Adventure"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account to start tracking"
            android:textColor="#558B2F"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/name_input_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full Name (Real Name)"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/email_input_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/password_input_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="24dp"/>


        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textSize="16sp"
            android:backgroundTint="#2E7D32"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C5E1A5"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="Already have an account?"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_back_to_login"
                android:text=" Login"
                android:textSize="14sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>