<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f0f2f5" tools:context=".MainActivity"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android
http://schemas.android.com/tools
http://schemas.android.com/tools
http://schemas.android.com/tools ">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="32dp" android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView android:id="@+id/logo" android:layout_width="150dp" android:layout_height="150dp"
            android:layout_marginBottom="24dp" android:src="@drawable/hiking"
            android:contentDescription="App Logo" android:scaleType="centerCrop"
            android:background="@drawable/logo_circle_bg" />

        <!-- Welcome Text -->
        <TextView android:id="@+id/welcome_text" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Welcome Back!"
            android:textSize="26sp" android:textStyle="bold" android:textColor="#2c3e50"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <EditText android:id="@+id/email_input" android:layout_width="match_parent"
            android:layout_height="50dp" android:hint="Email" android:inputType="textEmailAddress"
            android:padding="14dp" android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Password Input -->
        <EditText android:id="@+id/password_input" android:layout_width="match_parent"
            android:layout_height="50dp" android:hint="Password" android:inputType="textPassword"
            android:padding="14dp" android:background="@drawable/input_background"
            android:layout_marginBottom="24dp" />

        <!-- Login Button -->
        <Button android:id="@+id/login_button" android:layout_width="match_parent"
            android:layout_height="50dp" android:text="Login" android:textColor="#fff"
            android:textSize="16sp" android:backgroundTint="#0097e6"
            android:fontFamily="sans-serif-medium" android:layout_marginBottom="16dp" />

        <!-- Forgot Password -->
        <TextView android:id="@+id/forgot_password" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Forgot Password?"
            android:textColor="#007bb5" android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- Divider -->
        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#dcdcdc" android:layout_marginBottom="24dp" />

        <!-- Sign Up -->
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center">

            <TextView android:text="Don't have an account?" android:textSize="14sp"
                android:textColor="#7f8c8d" />

            <TextView android:id="@+id/sign_up" android:text=" Sign Up" android:textSize="14sp"
                android:textColor="#0097e6" android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
